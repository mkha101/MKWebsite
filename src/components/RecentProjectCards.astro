---
import Project from "../data/recent-projects";
---

<section class="flex flex-col items-center gap-8">
  {
    Project.map((project) => (
      <a
        class="group flex w-full cursor-pointer flex-col justify-between gap-2 rounded-md border border-neutral-700 p-4 transition-all duration-300 hover:-translate-y-2 hover:border-neutral-400 md:flex-row md:items-center"
        href={
          project.link.startsWith("http")
            ? project.link
            : `https://${project.link}`
        }
        target="_blank"
        rel="noreferrer"
      >
        <div class="flex flex-col gap-4 md:flex-col md:items-start">
          <p class="text-neutral-100">{project.title}</p>
          <p class="leading-relaxed">{project.description}</p>
          {project.techs && (
            <div class="flex flex-row flex-wrap gap-2">
              {project.techs.map((tech) => (
                <span class="transition ease-in-out cursor-pointer flex flex-row gap-1 justify-center items-center bg-[#1e2631] text-white px-6 py-1.5 rounded-lg">
                  {tech}
                </span>
              ))}
            </div>
          )}
        </div>
        <svg
          width="18"
          height="18"
          viewBox="0 0 18 18"
          fill="none"
          class="transition-all flex-shrink-0 duration-300 group-hover:translate-x-1"
        >
          <path
            d="M5.25 12.75L12.75 5.25"
            stroke="#999999"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
          <path
            d="M5.25 5.25H12.75V12.75"
            stroke="#999999"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
        </svg>
      </a>
    ))
  }
</section>
