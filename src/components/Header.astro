---
import presentation from "../data/presentation";
---

<header class="z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between">
  <a href="/" class="hover:text-[#1E293B] text-4xl text-white font-bold">
    {presentation.logo}
  </a>
  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-8">
      <li>
        <a
          href="/"
          class:list={{
            ["text-base text-white font-bold transition ease-in-out hover:text-[#79889b]"]: true,
          }}>Home</a
        >
      </li>
      <li>
        <a
          href="/projects"
          class:list={{
            ["text-base text-white font-bold transition ease-in-out hover:text-[#79889b]"]: true,
          }}>Projects</a
        >
      </li>
    </ul>
  </nav>
</header>
